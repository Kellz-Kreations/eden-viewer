# Copy to .env and update with your values
# Find PUID/PGID with: id $(whoami)

# Synology host paths
APPDATA_ROOT=/volume1/docker/appdata
DATA_ROOT=/volume1/data
TRANSCODE_ROOT=/volume1/docker/transcode

# Legacy variables (only needed for docker-compose.yml compatibility)
APPDATA_PATH=/volume1/docker/appdata
DATA_PATH=/volume1/data

# DSM user/group that owns the above folders
PUID=1026
PGID=100

# Timezone (example)
TZ=America/New_York

# Plex claim token is optional; can be omitted after initial claim
PLEX_CLAIM=

# Optional: where Plex advertises itself (usually not needed on host network)
ADVERTISE_IP=

# HTTPS/TLS configuration for plex-proxy service (Caddy reverse proxy)
# Set your domain name for automatic HTTPS certificate provisioning
PLEX_DOMAIN=

# Optional: email for ACME certificate notifications (e.g., expiry warnings)
CADDY_ACME_EMAIL=
